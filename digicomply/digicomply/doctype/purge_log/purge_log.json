{
    "name": "Purge Log",
    "module": "DigiComply",
    "doctype": "DocType",
    "custom": 0,
    "istable": 0,
    "issingle": 0,
    "is_tree": 0,
    "editable_grid": 0,
    "track_changes": 0,
    "engine": "InnoDB",
    "naming_rule": "Expression",
    "autoname": "PURGE-.YYYY.-.#####",
    "title_field": "document_type",
    "search_fields": "document_type,purge_date,purged_by",
    "sort_field": "purge_date",
    "sort_order": "DESC",
    "description": "Immutable log of all data purge operations",
    "fields": [
        {
            "fieldname": "purge_section",
            "fieldtype": "Section Break",
            "label": "Purge Details"
        },
        {
            "fieldname": "document_type",
            "fieldtype": "Link",
            "label": "Document Type",
            "options": "DocType",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "document_name",
            "fieldtype": "Data",
            "label": "Document Name",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "column_break_1",
            "fieldtype": "Column Break"
        },
        {
            "fieldname": "purge_date",
            "fieldtype": "Datetime",
            "label": "Purge Date",
            "reqd": 1,
            "default": "Now",
            "in_list_view": 1
        },
        {
            "fieldname": "purged_by",
            "fieldtype": "Link",
            "label": "Purged By",
            "options": "User",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "reason_section",
            "fieldtype": "Section Break",
            "label": "Reason"
        },
        {
            "fieldname": "retention_policy",
            "fieldtype": "Link",
            "label": "Retention Policy",
            "options": "Retention Policy"
        },
        {
            "fieldname": "purge_reason",
            "fieldtype": "Small Text",
            "label": "Purge Reason",
            "reqd": 1
        },
        {
            "fieldname": "approval_section",
            "fieldtype": "Section Break",
            "label": "Approval"
        },
        {
            "fieldname": "approved_by",
            "fieldtype": "Link",
            "label": "Approved By",
            "options": "User"
        },
        {
            "fieldname": "approval_date",
            "fieldtype": "Datetime",
            "label": "Approval Date"
        },
        {
            "fieldname": "backup_section",
            "fieldtype": "Section Break",
            "label": "Backup"
        },
        {
            "fieldname": "backup_created",
            "fieldtype": "Check",
            "label": "Backup Created",
            "default": "0"
        },
        {
            "fieldname": "backup_file",
            "fieldtype": "Attach",
            "label": "Backup File",
            "depends_on": "backup_created"
        },
        {
            "fieldname": "column_break_2",
            "fieldtype": "Column Break"
        },
        {
            "fieldname": "document_data_hash",
            "fieldtype": "Data",
            "label": "Data Hash",
            "read_only": 1
        },
        {
            "fieldname": "original_creation_date",
            "fieldtype": "Datetime",
            "label": "Original Creation Date"
        }
    ],
    "permissions": [
        {
            "role": "System Manager",
            "read": 1,
            "write": 0,
            "create": 1,
            "delete": 0,
            "export": 1
        },
        {
            "role": "DigiComply Admin",
            "read": 1,
            "write": 0,
            "create": 1,
            "delete": 0,
            "export": 1
        }
    ]
}
