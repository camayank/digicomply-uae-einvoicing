{
    "name": "Legal Hold",
    "module": "DigiComply",
    "doctype": "DocType",
    "custom": 0,
    "istable": 0,
    "issingle": 0,
    "is_tree": 0,
    "editable_grid": 0,
    "track_changes": 1,
    "engine": "InnoDB",
    "naming_rule": "Expression",
    "autoname": "HOLD-.YYYY.-.#####",
    "title_field": "hold_name",
    "search_fields": "hold_name,status,company",
    "sort_field": "creation",
    "sort_order": "DESC",
    "description": "Legal holds to prevent document deletion",
    "fields": [
        {
            "fieldname": "hold_section",
            "fieldtype": "Section Break",
            "label": "Hold Details"
        },
        {
            "fieldname": "hold_name",
            "fieldtype": "Data",
            "label": "Hold Name",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "status",
            "fieldtype": "Select",
            "label": "Status",
            "options": "Active\nReleased\nExpired",
            "default": "Active",
            "in_list_view": 1,
            "in_standard_filter": 1
        },
        {
            "fieldname": "column_break_1",
            "fieldtype": "Column Break"
        },
        {
            "fieldname": "hold_type",
            "fieldtype": "Select",
            "label": "Hold Type",
            "options": "Litigation\nAudit\nInvestigation\nRegulatory\nOther",
            "reqd": 1
        },
        {
            "fieldname": "company",
            "fieldtype": "Link",
            "label": "Company",
            "options": "Company",
            "in_standard_filter": 1
        },
        {
            "fieldname": "reason_section",
            "fieldtype": "Section Break",
            "label": "Reason"
        },
        {
            "fieldname": "hold_reason",
            "fieldtype": "Text",
            "label": "Reason",
            "reqd": 1
        },
        {
            "fieldname": "reference_number",
            "fieldtype": "Data",
            "label": "Reference Number",
            "description": "Case number, audit reference, etc."
        },
        {
            "fieldname": "validity_section",
            "fieldtype": "Section Break",
            "label": "Validity"
        },
        {
            "fieldname": "start_date",
            "fieldtype": "Datetime",
            "label": "Start Date",
            "default": "Now",
            "reqd": 1
        },
        {
            "fieldname": "end_date",
            "fieldtype": "Datetime",
            "label": "End Date"
        },
        {
            "fieldname": "column_break_2",
            "fieldtype": "Column Break"
        },
        {
            "fieldname": "indefinite",
            "fieldtype": "Check",
            "label": "Indefinite Hold",
            "default": "0"
        },
        {
            "fieldname": "scope_section",
            "fieldtype": "Section Break",
            "label": "Scope"
        },
        {
            "fieldname": "document_types",
            "fieldtype": "Small Text",
            "label": "Document Types",
            "description": "Comma-separated (leave empty for all)"
        },
        {
            "fieldname": "date_from",
            "fieldtype": "Date",
            "label": "Date From"
        },
        {
            "fieldname": "date_to",
            "fieldtype": "Date",
            "label": "Date To"
        },
        {
            "fieldname": "column_break_3",
            "fieldtype": "Column Break"
        },
        {
            "fieldname": "specific_documents",
            "fieldtype": "Text",
            "label": "Specific Documents",
            "description": "List specific document names"
        },
        {
            "fieldname": "approval_section",
            "fieldtype": "Section Break",
            "label": "Approval"
        },
        {
            "fieldname": "created_by",
            "fieldtype": "Link",
            "label": "Created By",
            "options": "User",
            "default": "__user"
        },
        {
            "fieldname": "approved_by",
            "fieldtype": "Link",
            "label": "Approved By",
            "options": "User"
        },
        {
            "fieldname": "column_break_4",
            "fieldtype": "Column Break"
        },
        {
            "fieldname": "released_by",
            "fieldtype": "Link",
            "label": "Released By",
            "options": "User"
        },
        {
            "fieldname": "release_date",
            "fieldtype": "Datetime",
            "label": "Release Date"
        },
        {
            "fieldname": "release_reason",
            "fieldtype": "Small Text",
            "label": "Release Reason"
        }
    ],
    "permissions": [
        {
            "role": "System Manager",
            "read": 1,
            "write": 1,
            "create": 1,
            "delete": 0
        },
        {
            "role": "DigiComply Admin",
            "read": 1,
            "write": 1,
            "create": 1,
            "delete": 0
        }
    ]
}
