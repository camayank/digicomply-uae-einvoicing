{
    "name": "Auditor Access",
    "module": "DigiComply",
    "doctype": "DocType",
    "custom": 0,
    "istable": 0,
    "issingle": 0,
    "is_tree": 0,
    "editable_grid": 0,
    "track_changes": 1,
    "engine": "InnoDB",
    "naming_rule": "Expression",
    "autoname": "AUDACC-.YYYY.-.#####",
    "title_field": "auditor_name",
    "search_fields": "auditor_name,auditor_email,company,access_status",
    "sort_field": "creation",
    "sort_order": "DESC",
    "description": "Manage external auditor access permissions",
    "fields": [
        {
            "fieldname": "auditor_section",
            "fieldtype": "Section Break",
            "label": "Auditor Information",
            "collapsible": 0
        },
        {
            "fieldname": "auditor_name",
            "fieldtype": "Data",
            "label": "Auditor Name",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "auditor_email",
            "fieldtype": "Data",
            "label": "Auditor Email",
            "options": "Email",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "auditor_organization",
            "fieldtype": "Data",
            "label": "Organization/Firm"
        },
        {
            "fieldname": "column_break_1",
            "fieldtype": "Column Break"
        },
        {
            "fieldname": "auditor_phone",
            "fieldtype": "Data",
            "label": "Phone"
        },
        {
            "fieldname": "auditor_designation",
            "fieldtype": "Data",
            "label": "Designation"
        },
        {
            "fieldname": "auditor_user",
            "fieldtype": "Link",
            "label": "Linked User",
            "options": "User",
            "description": "Auto-created user account for auditor"
        },
        {
            "fieldname": "access_section",
            "fieldtype": "Section Break",
            "label": "Access Configuration",
            "collapsible": 0
        },
        {
            "fieldname": "company",
            "fieldtype": "Link",
            "label": "Company",
            "options": "Company",
            "reqd": 1,
            "in_list_view": 1,
            "in_standard_filter": 1
        },
        {
            "fieldname": "audit_type",
            "fieldtype": "Select",
            "label": "Audit Type",
            "options": "External Audit\nFTA Audit\nInternal Audit\nSpecial Investigation\nCompliance Review",
            "reqd": 1,
            "in_standard_filter": 1
        },
        {
            "fieldname": "audit_reference",
            "fieldtype": "Data",
            "label": "Audit Reference Number"
        },
        {
            "fieldname": "column_break_2",
            "fieldtype": "Column Break"
        },
        {
            "fieldname": "access_status",
            "fieldtype": "Select",
            "label": "Access Status",
            "options": "Pending Approval\nActive\nSuspended\nExpired\nRevoked",
            "default": "Pending Approval",
            "in_list_view": 1,
            "in_standard_filter": 1
        },
        {
            "fieldname": "access_level",
            "fieldtype": "Select",
            "label": "Access Level",
            "options": "Read Only\nRead + Export\nRead + Export + Comment",
            "default": "Read Only"
        },
        {
            "fieldname": "validity_section",
            "fieldtype": "Section Break",
            "label": "Validity Period",
            "collapsible": 0
        },
        {
            "fieldname": "valid_from",
            "fieldtype": "Datetime",
            "label": "Valid From",
            "reqd": 1
        },
        {
            "fieldname": "valid_until",
            "fieldtype": "Datetime",
            "label": "Valid Until",
            "reqd": 1
        },
        {
            "fieldname": "column_break_3",
            "fieldtype": "Column Break"
        },
        {
            "fieldname": "auto_expire",
            "fieldtype": "Check",
            "label": "Auto Expire",
            "default": "1"
        },
        {
            "fieldname": "extension_allowed",
            "fieldtype": "Check",
            "label": "Extension Allowed",
            "default": "1"
        },
        {
            "fieldname": "scope_section",
            "fieldtype": "Section Break",
            "label": "Access Scope",
            "collapsible": 0
        },
        {
            "fieldname": "fiscal_years",
            "fieldtype": "Small Text",
            "label": "Fiscal Years",
            "description": "Comma-separated list of fiscal years (e.g., 2024, 2025)"
        },
        {
            "fieldname": "date_range_from",
            "fieldtype": "Date",
            "label": "Date Range From"
        },
        {
            "fieldname": "date_range_to",
            "fieldtype": "Date",
            "label": "Date Range To"
        },
        {
            "fieldname": "column_break_4",
            "fieldtype": "Column Break"
        },
        {
            "fieldname": "allowed_doctypes",
            "fieldtype": "Small Text",
            "label": "Allowed Document Types",
            "description": "Comma-separated list (leave empty for all)"
        },
        {
            "fieldname": "excluded_doctypes",
            "fieldtype": "Small Text",
            "label": "Excluded Document Types",
            "description": "Comma-separated list of restricted document types"
        },
        {
            "fieldname": "approval_section",
            "fieldtype": "Section Break",
            "label": "Approval",
            "collapsible": 1
        },
        {
            "fieldname": "requested_by",
            "fieldtype": "Link",
            "label": "Requested By",
            "options": "User"
        },
        {
            "fieldname": "request_date",
            "fieldtype": "Datetime",
            "label": "Request Date",
            "default": "Now"
        },
        {
            "fieldname": "request_reason",
            "fieldtype": "Small Text",
            "label": "Request Reason"
        },
        {
            "fieldname": "column_break_5",
            "fieldtype": "Column Break"
        },
        {
            "fieldname": "approved_by",
            "fieldtype": "Link",
            "label": "Approved By",
            "options": "User"
        },
        {
            "fieldname": "approval_date",
            "fieldtype": "Datetime",
            "label": "Approval Date"
        },
        {
            "fieldname": "approval_notes",
            "fieldtype": "Small Text",
            "label": "Approval Notes"
        },
        {
            "fieldname": "activity_section",
            "fieldtype": "Section Break",
            "label": "Activity Tracking",
            "collapsible": 1
        },
        {
            "fieldname": "last_login",
            "fieldtype": "Datetime",
            "label": "Last Login",
            "read_only": 1
        },
        {
            "fieldname": "login_count",
            "fieldtype": "Int",
            "label": "Login Count",
            "default": "0",
            "read_only": 1
        },
        {
            "fieldname": "documents_accessed",
            "fieldtype": "Int",
            "label": "Documents Accessed",
            "default": "0",
            "read_only": 1
        },
        {
            "fieldname": "column_break_6",
            "fieldtype": "Column Break"
        },
        {
            "fieldname": "exports_count",
            "fieldtype": "Int",
            "label": "Data Exports",
            "default": "0",
            "read_only": 1
        },
        {
            "fieldname": "requests_count",
            "fieldtype": "Int",
            "label": "Audit Requests",
            "default": "0",
            "read_only": 1
        },
        {
            "fieldname": "notes_section",
            "fieldtype": "Section Break",
            "label": "Notes",
            "collapsible": 1
        },
        {
            "fieldname": "internal_notes",
            "fieldtype": "Text",
            "label": "Internal Notes"
        }
